{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: configure (Release)",
      "type": "shell",
      "command": "cmake -S factorlib_v4 -B factorlib_v4/cmake-build-release -G Ninja -DCMAKE_BUILD_TYPE=Release",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "CMake: build (Release)",
      "type": "shell",
      "command": "cmake --build factorlib_v4/cmake-build-release --target run_tests -j 8",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": [
        "CMake: configure (Release)"
      ],
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}